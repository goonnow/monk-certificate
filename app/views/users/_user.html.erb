<div class="user" id="<%= user.id %>">
  <div class="front">
    <%= link_to user, class: 'pic-link' do %>
      <%= image_tag user.avatar.url(:medium) %>
    <% end %>
  </div>

  <div class="back">
    <div class="actions">
      <%= link_to 'Show', user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Delete', user, confirm: 'Are you sure you want to lose a user?', method: :delete, class: 'destroy' %>
    </div>
  </div>
</div>

