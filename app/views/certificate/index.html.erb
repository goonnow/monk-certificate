<html>
<head>
  <title>Monk Certificate</title>
  <meta charset="UTF-8">
  <style>
    @font-face {
        font-family: 'DilleniaUPCplRegular';
        src: url(<%= asset_data_base64('fonts/_1upcd04/_1upcd04.ttf') %>); format('truetype'),
    }

    .bali {
        font-family: 'DilleniaUPCplRegular';
    }

  </style>

  <%= wicked_pdf_stylesheet_link_tag "certificate" -%>

</head>
<body>
<% @monks.each.with_index do |monk, index| %>
        <% if index % 2 == 0 %>
            <div class="page">
        <% end %>
        <%= render 'certificate', :monk => monk %>
        <% if index % 2 == 1 %>
            </div>
        <% end %>
    <% end %>
</body>
</html>

